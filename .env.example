# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT & Session Secrets (Generate strong random strings)
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters
SESSION_SECRET=your_super_secure_session_secret_minimum_32_characters

# API Security Configuration
API_RATE_LIMIT=1000
DEFAULT_API_KEY=ak_prod2025_rwba6dj1sw

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
TRUST_PROXY=true

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/home/fleetapp/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/home/fleetapp/logs

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_password

# Monitoring & Analytics
ENABLE_ANALYTICS=true
ANALYTICS_KEY=your_analytics_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30